.checking {
	display: table;
	width 100%
	margin: 15px auto 0;
	text-align: left
}

.checking .check_label {
	font-size: 13px;
	font-family: "OpenSansLight", sans-serif;
	color: rgba(#fff, .9)
	line-height: 13px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 26px;
	text-align: left
}

.checking .check_label a {
	color: rgba(#fff, .9)
	text-decoration: underline
}

.checking .check_label:before {
	content: '';
	background-color: #fff;
	position: absolute;
	left: 0;
	top: 0;
	width: 14px;
	height: 14px;
	border none
}

.checking .check_label:after {
	content: '';
	position: absolute;
	left: 5px;
	top: -10px;
	width: 4px;
	height: 10px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #1f2022
	border-right: 2px solid #1f2022
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;

}

.check {
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
}

.check:checked + label:before {
	background-color: #fff;

}

.check:checked + label:after {
	opacity: 1;
	top: 1px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
}

@-webkit-keyframes autofill {
	to {
		color: rgba(29, 28, 24, 0.702);
		background: #f7f8fa;
	}
}

input:-webkit-autofill {
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
}
