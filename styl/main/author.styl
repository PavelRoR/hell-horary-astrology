#author
	width 100%
	padding 190px 0
	position relative
	height 100%
	.container
		position relative
		z-index: 9
	&:before
		position: absolute;
		z-index: 0;
		content: none
		display: block;
		width: 100%;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		height: inherit;
		background-image: url("../img/author_bg.png");
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
#author_img
	position: absolute
	width: 100%
	top 0
	left 0
	height 100%
	margin 0 auto
.general_title_author
	color #fff
	margin-bottom: 48px
#lidya_about
	width 100%
	max-width 390px
	float left
	margin 0 31px 37px 0
.about_title
	font-size: 22px;
	font-family: "GilroyExtraBold", sans-serif;
	color: rgb(217, 94, 123);
	line-height: 1.328;
	margin 64px 0 25px
.about_text
	color #fff
	margin-bottom: 10px
	line-height: 1.4
	&:last-of-type
		margin-bottom: 45px
.about_subtitle
	font-size: 20px;
	color: rgb(217, 94, 123);
	line-height: 1.3
	font-family: "GilroyExtraBold", sans-serif;
	margin-bottom: 15px
.about_list
	li
		list-style: none
		color #ffffff
		position relative
		&:before
			content ''
			display block
			position: absolute
			width: 6px
			height 6px
			border-radius: 50%
			background-color: #d95e7b
			top 9px
			left 0
.about_list_directions
	li
		display: inline-block
		margin-right: 15px
		padding-left: 11px
.about_list_educations
	li
		margin-bottom: 9px
		padding-left: 21px
.certs
	text-align: center
	margin-top: 20px
.cert_img
	display: inline-block
	width 100%
	max-width 110px
	margin 0 10px
.button_partner
	margin-top: 65px
	max-width 336px