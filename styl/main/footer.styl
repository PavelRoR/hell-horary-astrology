#footer
	width 100%
	padding 40px 0
	background-color: #020217
	text-align: center;
	p
		font-size: 14px;
		font-family: "Open SansLight", sans-serif;
		color: rgba(254, 254, 254, 0.6);
		line-height: 1.2;
.mail_modal-content
	background-color: #d95e7b
	border-radius: 20px
	text-align: center
.modal_form
	width 100%
	float: none
.modal_mail_section_title
	width 100%
	float: none
	max-width 90%
	margin 0 auto 20px
	color #fff
.modal_mail_subtitle
	color #fff
	width 100%
	max-width 90%
	margin 10px auto
.form_container_modal
	max-width 455px
	width 100%
	float: none
	margin 0 auto
.checking_modal
	max-width 455px
	margin-bottom: 15px
.mail_soc_buttons_modal
	float: none
button.close
	position absolute
	width: 35px
	height 35px
	border-radius: 50px
	line-height: 35px
	text-align: center
	font-size: 30px
	color: #000
	background-color: #F0F0F0
	top 10px
	right 10px
	left auto
	z-index 99
	opacity 1
	transition: all .1s ease-in-out
	&:hover
		transform: rotate(90deg)
.politics_modal-content
	.modal-title
		font-size: 24px
		text-align: left 
		width 100%
		max-width 90%
		small
			display: block
	p
		font-size: 16px
		margin-bottom: 15px
.modal-backdrop.in
	opacity .8