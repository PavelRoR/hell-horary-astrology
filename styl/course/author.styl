#author
	width 100%
	padding 60px 0
	background-color: #040421
	background-image url(../img/author_bg_mob.jpg)
	background-repeat no-repeat
	background-position center
	background-size: cover
.general_title_author
	color #fff
#lidya_about
	width 100%
	max-width 390px
	float left
	margin 0 31px 37px 0
.about_title
	font-size: 22px;
	font-family: "GilroyExtraBold", sans-serif;
	color: rgb(217, 94, 123);
	line-height: 1.328;
	margin 64px 0 25px
.about_text
	color #fff
	margin-bottom: 10px
	line-height: 1.4
	&:last-of-type
		margin-bottom: 45px
.about_subtitle
	font-size: 20px;
	color: rgb(217, 94, 123);
	line-height: 1.3
	font-family: "GilroyExtraBold", sans-serif;
	margin-bottom: 15px
.about_list
	li
		list-style: none
		color #ffffff
		position relative
		&:before
			content ''
			display block
			position: absolute
			width: 6px
			height 6px
			border-radius: 50%
			background-color: #d95e7b
			top 9px
			left 0
.about_list_directions
	li
		display: inline-block
		margin-right: 15px
		padding-left: 11px
.about_list_educations
	li
		margin-bottom: 9px
		padding-left: 21px
.certs
	text-align: center
	margin-top: 45px
.cert_img
	display: inline-block
	width 100%
	max-width 70px
	margin 0 10px