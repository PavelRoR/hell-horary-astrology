#main
	width: 100%
	padding 0 0 60px
	background-color: #082138
	background-image url(../img/course_main_bg.jpg)
	background-repeat no-repeat
	background-position: center bottom
	background-size: cover
	text-align: center
#lidya_main
	position: absolute
	bottom: 82px;
	right: 60px;
	width: 390px
	z-index 0
#header
	padding: 29px 0
	overflow hidden
	z-index: 9
	position relative
	margin-bottom: 15px
#logo
	float: left
	width 164px
	height auto
.contacts
	float: right
	text-align: right
	line-height  15px
	a
		font-size: 10px
		&:focus
			text-decoration: none
		.fa
			color: #d95e7b
			font-size: 15px
			margin: 0 10px 0 22px
			line-height: 15px
		.fa+span
			line-height: 15px
			font-size: 15px;
			font-family: "OpenSans", sans-serif;
			color: rgba(#fff, .8)
			text-align: right;
			&:hover
				text-decoration underline
.tel:first-child
	.fa-phone
		margin-left: 0
.pre
	font-size: 22px;
	font-family: "GilroyExtraBold", sans-serif;
	color: rgb(217, 94, 123);
	line-height: 1.2
	span
			font-family: "GilroyLight", sans-serif;
			color #fff
			display: inline-block
.main_title
	font-size: 46px;
	font-family: "GilroyExtraBold", sans-serif;
	color: rgb(254, 254, 254);
	line-height: 1.3;
	margin 15px 0
.main_date
	font-size: 30px
	font-family: "GilroyExtraBold", sans-serif;
	color:  #d95e7b
	text-decoration: underline
	span
		font-family: "GilroyLight", sans-serif;
		color: rgb(254, 254, 254);
		text-decoration: none
		display: inline-block
.button_main
	margin 40px auto 0