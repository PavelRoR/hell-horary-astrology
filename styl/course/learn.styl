#learn
	width 100%
	padding 60px 0
.general_title_learn
	small
		font-size: 70%
		display block
		font-family: "GilroyLight", sans-serif
.learn_packet
	box-shadow: 0px 5px 11px 0px rgba(0,0,0,0.15);
	width: 100%;
	max-width: 880px;
	float left
	background-color #fff
	border-radius: 5px;
	border: 1px solid #f4f1f3;
	padding 25px 35px
	margin 0 60px 40px
	&:last-child
		margin-bottom: 0
.learn_packet_2
	float: right
.learn_packet_text
	font-size: 20px
	margin-bottom: 20px
	line-height: 1.5
	text-indent: 20px
	span
		font-size: 21px
		font-family: "GilroyExtraBold", sans-serif
		color #d95e7b
	&:last-child
		margin-bottom: 0