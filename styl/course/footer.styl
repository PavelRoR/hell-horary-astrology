#footer
	width 100%
	padding 30px 0
	background-color: #020217
	text-align: center;
	h5
		font-size: 24px;
		color: rgb(255, 252, 252);
		line-height: 1.042;
		margin 0
		font-family: 'OpenSans', sans-serif;
	p
	#conditions
		font-size: 14px;
		font-family: "OpenSansLight", sans-serif;
		color: rgba(254, 254, 254, 0.6);
		line-height: 1.2;
	#conditions
		text-decoration: underline
		&:hover
			text-decoration: none
.soc_buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 20px 7px
		position relative
		z-index: 1
		border-radius: 50px
		background-color: rgb(217, 94, 123);
		transition: all .3s ease
		i
			width: 32px;
			height: 32px;
			color #020217
			font-size 18px
			line-height 32px
			border-radius: 50px
			position relative
			z-index 9
			transition: all .3s ease
		&:hover
			background-color: rgb(199,60,93);
			i
				color #ffffff