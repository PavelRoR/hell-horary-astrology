*
	margin 0
	padding 0
	outline none
body
	font-family: 'GilroyLight', sans-serif
	font-size: 16px
	background-color #fff
	background-image url(../img/body_bg.png)
	background-repeat repeat
	background-position: center
a
	color: #fefefe
	&:focus
		outline: 0
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
.video_wrapper
	margin 0 auto
	position relative
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #fff
		border-radius 5px
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.button
	display block
	border-radius: 25px;
	background-color: rgb(217, 94, 123);
	width: 100%;
	max-width: 270px;
	margin 0 auto
	height: 55px;
	line-height: 55px;
	text-decoration: none
	font-size: 16px;
	font-family: "GilroyExtraBold", sans-serif;
	color: rgb(255, 255, 255);
	text-transform: uppercase;
	text-align: center
	transition: all .3s ease
	cursor pointer
	overflow hidden
	position relative
	span
		display inline-block
		// width 100%
		// height 100%
		transition: all .3s ease
	&:focus
		background-color: rgb(217, 94, 123);
		color #ffffff
		text-decoration: none
	&:hover
		text-decoration: none
		background-color: rgb(199,60,93);
		color #ffffff
.general_title
	font-size: 36px;
	font-family: "GilroyExtraBold", sans-serif;
	color: rgb(34, 34, 47);
	line-height: 1.423;
	text-align: center;
	margin-bottom: 40px
	span
		color #d95e7b
